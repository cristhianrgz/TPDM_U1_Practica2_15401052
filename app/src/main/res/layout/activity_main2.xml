<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:id="@+id/layu"
        tools:context=".Main2Activity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capturar Datos"
            android:textSize="30dp"
            android:layout_marginLeft="60dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/linearOri21">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor:          "
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:id="@+id/txtvalor"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                android:inputType="number"
                android:hint="coloque un número"
                android:id="@+id/editvalor"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearOri22">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posición C: "
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                android:hint="coloque un número"
                android:inputType="number"
                android:id="@+id/editCeldas"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearOri23">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:id="@+id/linearOribotones">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capturar"
                android:textSize="25dp"
                android:id="@+id/btnCapturar"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:textSize="25dp"
                android:id="@+id/btnRegresar"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/linearRdButton">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:id="@+id/archivos1">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Archivo 1"
                    android:textSize="25dp"
                    android:id="@+id/rdarchivo1"
                    android:checked="true"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Archivo 2"
                    android:textSize="25dp"
                    android:id="@+id/rdarchivo2"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Archivo 3"
                    android:textSize="25dp"
                    android:id="@+id/rdarchivo3"
                    />
            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archivar"
                android:textSize="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:id="@+id/btnArchivar"
                />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridVectorMatriz">

            <TextView
                android:text="vector o Matriz"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|top"
                />
        </GridLayout>

    </LinearLayout>
</ScrollView>