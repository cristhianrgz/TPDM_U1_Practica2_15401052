<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Main3Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recuperar Datos"
        android:textSize="30dp"
        android:padding="20dp"
        android:layout_marginLeft="60dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="97dp"
        android:id="@+id/linearArchivos">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/archivos2">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archivo 1"
                android:textSize="25dp"
                android:id="@+id/rdarchivo1"
                android:checked="true"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archivo 2"
                android:textSize="25dp"
                android:id="@+id/rdarchivo2"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archivo 3"
                android:textSize="25dp"
                android:id="@+id/rdarchivo3"
                />
        </RadioGroup>

    </LinearLayout>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Abrir"
        android:textSize="25dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="50dp"
        android:id="@+id/btnAbrir"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridVectorMatriz">

        <TextView
            android:text="vector o Matriz"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center|top"
            />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exportar a XLS"
        android:textSize="25dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:id="@+id/btnexportar"
        />

</LinearLayout>